{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*",
    "eslint.config.js",
    "prettier.config.js",
    "kubb.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}